@model List<BareProx.Models.JobViewModel>

@functions {
    string GetRowClass(string status) => status switch
    {
        "Completed" => "table-success",
        "Failed" => "table-danger",
        "Cancelled" => "table-warning",
        "Running" => "table-info",
        "Warning" => "table-warning",
        _ => ""
    };

    string GetStatusBadge(string status) => status switch
    {
        "Completed" => "success",
        "Failed" => "danger",
        "Cancelled" => "warning",
        "Running" => "info",
        "Warning" => "warning",
        _ => "secondary"
    };
}

@{
    // pageSize comes from controller, default 50
    var pageSize = ViewBag.PageSize as int? ?? 50;
}

@if (Model == null || Model.Count == 0)
{
    <div class="alert alert-light border text-muted mb-0">
        No jobs found for the current filters.
    </div>
}
else
{
    <div class="d-flex justify-content-between align-items-center mb-2">
        <div>
            <form method="get" id="pageSizeForm" class="d-inline-flex align-items-center">
                <label for="pageSize" class="me-2 mb-0"><strong>Show</strong></label>
                <select id="pageSize"
                        name="pageSize"
                        class="form-select form-select-sm"
                        style="width: auto;">
                    <option value="10" selected="@(pageSize == 10)">10</option>
                    <option value="25" selected="@(pageSize == 25)">25</option>
                    <option value="50" selected="@(pageSize == 50)">50</option>
                    <option value="100" selected="@(pageSize == 100)">100</option>
                    <option value="250" selected="@(pageSize == 250)">250</option>
                </select>
                <span class="ms-2">jobs</span>
            </form>
        </div>

        <div class="text-muted small">
            Showing @Model.Count job(s)
        </div>
    </div>

    <table class="table table-striped align-middle" id="jobs-table">
        <thead>
            <tr>
                <th role="button" data-column="Type" aria-sort="none">Type</th>
                <th role="button" data-column="RelatedVm" aria-sort="none">VM/Storage</th>
                <th role="button" data-column="Status" aria-sort="none">Status</th>
                <th role="button" data-column="StartedAt" aria-sort="none">Started</th>
                <th role="button" data-column="CompletedAt" aria-sort="none">Completed</th>
                <th>Error</th>
                <th class="text-end">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var job in Model)
            {
                var badge = GetStatusBadge(job.Status);
                <tr class="@GetRowClass(job.Status)">
                    <td class="text-nowrap">@job.Type</td>

                    <td class="text-truncate" style="max-width: 30ch;" title="@job.RelatedVm">
                        @job.RelatedVm
                    </td>

                    <td>
                        <span class="badge bg-@badge align-middle">@job.Status</span>
                        @if (job.Status == "Running")
                        {
                            <span class="spinner-border spinner-border-sm ms-2 align-middle" role="status" aria-hidden="true"></span>
                            <span class="visually-hidden">In progress</span>
                        }
                    </td>

                    <td class="text-nowrap">
                        @job.StartedAtLocal.ToString("yyyy-MM-dd HH:mm")
                    </td>

                    <td class="text-nowrap">
                        @(job.CompletedAtLocal.HasValue
                            ? job.CompletedAtLocal.Value.ToString("yyyy-MM-dd HH:mm")
                            : "-")
                    </td>

                    <!-- Error: truncate with ellipsis, full text in tooltip -->
                    <td class="align-middle">
                        @if (string.IsNullOrEmpty(job.ErrorMessage))
                        {
                            @:"-"
                        }
                        else
                        {
                            <span class="d-inline-block text-truncate text-break align-middle"
                                  style="max-width: 40ch;"
                                  title="@job.ErrorMessage">
                                @job.ErrorMessage
                            </span>
                        }
                    </td>

                    <td class="text-end">
                        <div class="btn-group btn-group-sm" role="group" aria-label="Job actions">
                            <button type="button"
                                    class="btn btn-outline-primary js-job-details"
                                    data-job-id="@job.Id">
                                Details
                            </button>

                            @if (job.Status == "Running")
                            {
                                <form asp-controller="Jobs"
                                      asp-action="Cancel"
                                      asp-route-id="@job.Id"
                                      method="post"
                                      class="d-inline ms-2">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-outline-danger">Cancel</button>
                                </form>
                            }
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
