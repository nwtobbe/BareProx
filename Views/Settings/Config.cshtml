@model BareProx.Models.DatabaseConfig

@{
    ViewData["Title"] = "Configure Database";
}

<h1>@ViewData["Title"]</h1>

<form asp-action="System" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label asp-for="DbServer"></label>
        <input asp-for="DbServer" class="form-control" required />
        <span asp-validation-for="DbServer" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DbName"></label>
        <input asp-for="DbName" class="form-control" required />
        <span asp-validation-for="DbName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DbUser"></label>
        <input asp-for="DbUser" class="form-control" required />
        <span asp-validation-for="DbUser" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="DbPassword"></label>
        <input asp-for="DbPassword" type="password" class="form-control" required />
        <span asp-validation-for="DbPassword" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Configuration</button>
</form>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success mt-3">
        @TempData["SuccessMessage"]
    </div>
}

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}