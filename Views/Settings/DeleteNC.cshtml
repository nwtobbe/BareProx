@model BareProx.Models.NetappController

@{
    ViewData["Title"] = "Delete Netapp Controller";
}

<h2>Delete Netapp Controller</h2>

<h4>Are you sure you want to delete this controller?</h4>

<div>
    <dl class="row">
        <dt class="col-sm-2">Hostname</dt>
        <dd class="col-sm-10">@Model.Hostname</dd>

        <dt class="col-sm-2">IP Address</dt>
        <dd class="col-sm-10">@Model.IpAddress</dd>

        <dt class="col-sm-2">Type</dt>
        <dd class="col-sm-10">@(Model.IsPrimary == true ? "Primary" : "Secondary")</dd>
    </dl>

    <form asp-action="Delete" method="post">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>
