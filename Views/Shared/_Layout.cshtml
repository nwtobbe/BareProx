@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@if (TempData["ErrorMessage"] is string errMsg)
{
    <div class="alert alert-danger">
        <strong>Connection error:</strong> @errMsg
    </div>
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BareProx</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BareProx.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand d-flex align-items-center" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="~/Pics/BareProx.svg" alt="BareProx Logo" style="height: 32px;" class="me-2" />
                    <span>BareProx</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarNav">
                    @* only show the main menus when logged in *@
                    @if (SignInManager.IsSignedIn(User))
                    {
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0">

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Jobs" asp-action="Index">Jobs</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Proxmox" asp-action="ListVMs">
                                    Proxmox Storage
                                </a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Backup" asp-action="Backup">
                                    Backup
                                </a>
                            </li>

                            <!-- Restore dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark"
                                href="#"
                                id="restoreDropdown"
                                role="button"
                                data-bs-toggle="dropdown"
                                aria-expanded="false">
                                    Restore
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="restoreDropdown">
                                    <li>
                                        <a class="dropdown-item"
                                        asp-area=""
                                        asp-controller="Restore"
                                        asp-action="Index">
                                            Restore VM
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                        asp-area=""
                                        asp-controller="Cleanup"
                                        asp-action="Index">
                                            Cleanup
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Wafl" asp-action="Snapshots">
                                    Snapshots
                                </a>
                            </li>

                            <!-- Settings Dropdown -->
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle text-dark" href="#" id="settingsDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                    Settings
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="settingsDropdown">
                                    <li>
                                        <a class="dropdown-item"
                                        asp-controller="Settings"
                                        asp-action="Config">
                                            System
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                        asp-controller="Users"
                                        asp-action="Index">
                                            Users
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                        asp-controller="Settings"
                                        asp-action="Index">
                                            Netapp Controllers
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item"
                                        asp-controller="Settings"
                                        asp-action="Proxmox">
                                            Proxmox
                                        </a>
                                    </li>
                                </ul>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">
                                    Privacy
                                </a>
                            </li>
                        </ul>
                    }
                    <!-- Login partial -->
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - BareProx - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
