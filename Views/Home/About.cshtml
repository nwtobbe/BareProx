            <!-- Tech pills -->
            <div class="mt-3">
                <span class="badge bg-dark">ASP.NET Core (C#)</span>
                <span class="badge bg-dark">Docker</span>
                <span class="badge bg-dark">Proxmox VE</span>
                <span class="badge bg-dark">NetApp ONTAP</span>
                <span class="badge bg-dark">NFS</span>
                <span class="badge bg-dark">Open Source</span>
            </div>
        </div>
        <div class="mt-3 d-flex justify-content-end">
            <span class="badge bg-light text-muted border" aria-label="Made in Sweden">
                <span class="me-1" role="img" aria-hidden="true">🇸🇪</span> Made in Sweden
            </span>
        </div>
