@model BareProx.Models.MigrationSettingsViewModel
@{
    ViewData["Title"] = "Migration – Settings";

    var hasStorages = Model?.StorageOptions != null && Model.StorageOptions.Any();
    var hasClusterSelection = (Model?.SelectedClusterId ?? 0) > 0;

    // This comes from the DB via the controller
    var hasSavedConfig = Model?.HasSavedConfigForCluster ?? false;
}

<h2 class="mb-1">Migration Settings</h2>

@if (hasClusterSelection)
{
    <div class="mb-3 small text-muted">
        Status:
        @if (hasSavedConfig)
        {
            <span class="text-success">configured and ready</span>
        }
        else
        {
            <span class="text-warning">not configured yet</span>
        }
    </div>
}
else
{
    <div class="mb-3 small text-muted">
        Select a Proxmox cluster and click <strong>Load Cluster</strong> to view migration settings.
    </div>
}

@if (TempData["ErrorMessage"] is string err)
{
    <div class="alert alert-danger"><strong>Error:</strong> @err</div>
}
@if (TempData["SuccessMessage"] is string ok)
{
    <div class="alert alert-success">@ok</div>
}

<!-- Pick cluster then reload options -->
<form asp-action="Settings" method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-6">
            <label asp-for="SelectedClusterId" class="form-label">Proxmox Cluster</label>
            <select asp-for="SelectedClusterId" asp-items="Model.ClusterOptions" class="form-select"></select>
        </div>
        <div class="col-md-3">
            <button type="submit" class="btn btn-outline-primary w-100">Load Cluster</button>
        </div>
    </div>
</form>

<form asp-action="Settings" method="post" novalidate>
    @Html.AntiForgeryToken()
    <input type="hidden" asp-for="SelectedClusterId" />
    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

    <div class="row g-3">
        <div class="col-md-6">
            <label class="form-label" asp-for="SelectedHostId">Proxmox Host</label>
            <select class="form-select" asp-for="SelectedHostId" asp-items="Model.HostOptions"></select>
            <span class="text-danger small" asp-validation-for="SelectedHostId"></span>
        </div>

        <div class="col-md-6">
            <label class="form-label" asp-for="SelectedStorageIdentifier">
                Migration Datastore
                <span class="badge bg-secondary ms-1" title="Only datastores that exist in BOTH Proxmox → Selected storage and NetApp → Selected volumes">
                    intersection
                </span>
            </label>

            @if (hasStorages)
            {
                <select class="form-select"
                        asp-for="SelectedStorageIdentifier"
                        asp-items="Model.StorageOptions">
                </select>
                <div class="form-text">
                    @Model.StorageOptions.Count option@(Model.StorageOptions.Count == 1 ? "" : "s") available.
                </div>
            }
            else
            {
                <select class="form-select"
                        asp-for="SelectedStorageIdentifier"
                        asp-items="Model.StorageOptions"
                        disabled="disabled">
                </select>
                <div class="alert alert-warning mt-2 py-2">
                    <strong>No eligible datastores.</strong>
                    Select at least one storage in <em>Proxmox → Selected storage</em>
                    <span class="text-muted">and</span>
                    the matching volume in <em>NetApp → Selected volumes</em>.
                </div>
            }

            <span class="text-danger small" asp-validation-for="SelectedStorageIdentifier"></span>
        </div>
    </div>

    <div class="mt-4 d-flex gap-2">
        @if (hasStorages)
        {
            <button type="submit" class="btn btn-primary">Save</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary" disabled="disabled">Save</button>
        }
        <a asp-action="Migrate" class="btn btn-outline-secondary">Back to Migrate</a>
        <a asp-action="Help" class="btn btn-outline-info">Help</a>
    </div>
</form>
